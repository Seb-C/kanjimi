{
  "manifest_version": 2,
  "name": "Kanjimi",
  "author": "SÃ©bastien Caparros",
  "homepage_url": "{{ KANJIMI_WWW_URL }}",
  "incognito": "spanning",
  "version": "0.4",
  "description": "Service helping you to learn Japanese by allowing you to read real content on internet",
  "icons": {
    "48": "./images/logo.png",
    "128": "images/logo-128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_end",
      "matches": [
        "*://{{ KANJIMI_EXTENSION_HOST }}/*",
        "*://*.{{ KANJIMI_EXTENSION_HOST }}/*"
      ],
      "js": ["/content.build.js"],
      "css": ["/content.build.css"]
    }
  ],
  "permissions": [
    "*://{{ KANJIMI_EXTENSION_HOST }}/*",
    "*://*.{{ KANJIMI_EXTENSION_HOST }}/*",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_title": "Enable Kanjimi on this page",
    "default_icon": "./images/logo.png"
  },
  "web_accessible_resources": [
    "*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@kanjimi.com"
    }
  }
}
