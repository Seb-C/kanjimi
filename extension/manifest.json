{
  "manifest_version": 2,
  "name": "Kanjimi",
  "author": "SÃ©bastien Caparros",
  "homepage_url": "http://www.kanjimi.com/",
  "incognito": "spanning",
  "version": "1.0",
  "description": "Service helping you to learn Japanese by allowing you to read real content on internet",
  "icons": {
    "48": "./images/logo.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["/content.build.js"],
      "css": ["/content.build.css"]
    }
  ],
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "permissions": [
    "*://localhost/*",
    "storage",
    "notifications",
    "tabs"
  ],
  "web_accessible_resources": [
    "*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@kanjimi.com"
    }
  }
}
