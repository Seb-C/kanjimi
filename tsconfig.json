{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "firefox-webext-browser"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*"
  ]
}
