{
    "defaultSeverity": "error",
    "extends": "tslint-config-airbnb",
    "rules": {
      "indent": [true, "tabs", 1],
      "ter-indent": [true, "tab", {"SwitchCase": 1}],
      "no-else-after-return": [false],
      "no-increment-decrement": [false],
      "no-duplicate-imports": [false],
      "align": [false],
      "import-name": [false]
    }
}
